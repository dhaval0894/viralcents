<html>
<head>
	<title>Share a link to twitter</title>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Facebook and Twitter integration -->
	<meta property="og:title" content=""/>
	<meta property="og:image" content=""/>
	<meta property="og:url" content=""/>
	<meta property="og:site_name" content=""/>
	<meta property="og:description" content=""/>
	<meta name="twitter:title" content="" />
	<meta name="twitter:image" content="" />
	<meta name="twitter:url" content="" />
	<meta name="twitter:card" content="" />

	<!-- Mandatory Css -->
	<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
	
  	<%= csrf_meta_tags %>
	

	<!-- Google Fonts-->
	<link href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,300,600,400italic,700' rel='stylesheet' type='text/css'>
</head>
<body>
<div class="container">
	<div class="text-left">
		<img src="assets/twitter.png" alt="" class="img-responsive">
	</div>
	<hr>		
	<h3 class="text-left text-muted">Share a link with your followers</h2>
	<div class="row">
		<div class="col-md-12 col-lg-12">
			<%=  text_area_tag 'query', params[:url], :id => "txt", rows: "3", :class => 'form-control', maxlength: "140" %>
		</div>
	</div>
	<br/>
	<div class="col-md-3 pull-right">
		<span class="text-muted">140</span>
	 	<a onclick="run()" class="btn btn-social-icon btn-twitter">
            <strong>Tweet</strong> 
        </a>
	</div>
</div>	
 <script>
    function run(){
var txt = document.getElementById('txt').value;

window.opener.location.href = "post?p=" + txt;
self.close();
}


    </script>
</body>
</html>