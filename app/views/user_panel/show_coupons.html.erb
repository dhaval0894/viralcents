                        <button class="btn btn-primary btn-xs coupon-btn" role="button"><i class="fa fa-rupee fa-1x"></i><strong><%= coupon.coupon_amount %></strong></button> 
                    </div>    
                <% end %>    
            </span>
        </div>
    </div>
    <% end %>
