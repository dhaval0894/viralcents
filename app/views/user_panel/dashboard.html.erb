            <div class="panel-body">
                <div class="row">
                    <% @stories[0,4].each do |story|%>
                        <div class="col-md-4 text-center">
                            <%= render 'user_panel/story', story: story %>
                            <!-- Rate Popover -->
                            <%= render 'paypopover', story: story %>    
                        </div>
                    <% end %>
                </div>
                <div class="text-right">
                    <a href="/stories">View More <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>    
