            </div>
            <div class="panel panel-default col-lg-8 feature-stories">
                <div class="panel-body">
                    <% @stories[0,4].each do |story|%>
                        <div class="col-md-6 text-center">
                                <div class="thumbnail">
                                    <%if !story.image_url.nil?%>
                                        <img class="img-responsive" style="width:300px; height:150px;" src="<%= story.image_url %>" alt="">
                                    <%else%>
                                        <img class="img-responsive" src="http://placehold.it/600x300" alt="">
                                    <% end %>
                                    <%if !story.title.nil?%>
                                        <div class="caption">
                                            <h5 class="title"><%= story.title %></h5>         
                                        </div>
                                    <% else %>    
                                        <div class="caption">
                                            <h5>Unable to fetch</h5>         
                                        </div>
                                    <% end %>
                                    
                                    <%@us_story.each do |usr_str|%>
                            <%if usr_str.story_id == story.id && !usr_str.short_url.nil?%>
                            <%@u=usr_str.short_url%>
                            
                            <%end%>
                    <%end%>
 
                <div class="input-group">
                    <span class="input-group-addon">

                        <button class='my_clip_button btn btn-primary btn-xs' data-clipboard-target='#fe_text1' onclick="url_generate(<%= story.id %>)" title='Click here to copy to clipboard.'>
                        <i class="fa fa-copy"></i>
                    </button>
                    </span>
                    <input type="text" id='fe_text1' class="form-control" value='<%=@u%>'>
                </div>                                      
                                    <ul class="list-inline">
                    <li>
                        <a href="#" class="fa-stack" id="rate" data-toggle="popover" data-trigger="hover">
