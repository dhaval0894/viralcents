
<!-- Stats Row -->
<%= render 'stats' %>

<!-- Content Row -->
<div class="row admin-row">

        <!-- Featured Stories -->
        <div class="col-lg-12">
            <h2 class="page-header col-lg-8 text-left">Featured Stories</h2>
        </div>
        <div class="panel panel-default col-lg-8 feature-stories">
            <div class="panel-body">
                <% @stories[0,4].each do |story|%>
                    <div class="col-md-6 text-center">
                        <%= render 'user_panel/story', story: story %>    
                    </div>
                <% end %>    
                <div class="text-right">
                    <a href="/stories">View More <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>    
        </div>
        
        <!-- Leaderboard -->
        <div class="col-md-4">
            <div class="panel panel-theme">
                <div class="panel-heading">
                    <h3 class="panel-title"><i class="fa fa-users fa-fw"></i> Leaderboard</h3>
                </div>
                
                    <div class="table-responsive">
                        <table class="table table-hover table-striped">
                            <thead>
                                <tr>
                                    <th class="text-center"># Rank</th>
                                    <th class="text-center">Name</th>
                                    <th class="text-center">Country</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1</td>
                                    <td>XXXX</td>
                                    <td>India</td>
                                </tr>
                                <tr>
                                    <td>2</td>
                                    <td>XXXX</td>
                                    <td>India</td>
                                </tr>
                                <tr>
                                    <td>3</td>
                                    <td>XXXX</td>
                                    <td>France</td>
                                </tr>
                                <tr>
                                    <td>4</td>
                                    <td>XXXX</td>
                                    <td>USA</td>
                                </tr>
                                <tr>
                                    <td>5</td>
                                    <td>XXXX</td>
                                    <td>Serbia</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="text-right">
                        <a href="/leaderboard">View All <i class="fa fa-arrow-circle-right"></i></a>
                    </div>
            </div>
        </div>

        <!-- Visitors Count -->
        <div class="col-md-4">
            <div class="panel panel-theme">
                <div class="panel-heading">
                    <h3 class="panel-title"><i class="fa fa-flag fa-fw"></i> Visitors Count</h3>
                </div>
                
                    <div class="table-responsive">
                        <table class="table table-hover table-striped">
                            <thead>
                                <tr>
                                    <th class="text-center">Country</th>
                                    <th class="text-center">Count</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>India</td>
                                    <td>29</td>
                                </tr>
                                <tr>
                                    <td>USA</td>
                                    <td>7</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="text-right">
                        <a href="#">View All <i class="fa fa-arrow-circle-right"></i></a>
                    </div>
            </div>
        </div>

</div>
<!-- ./content-row -->

