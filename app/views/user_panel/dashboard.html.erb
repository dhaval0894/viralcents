                                <% i=1 %>      
                            <%end%>
                        <%end%> 
                        <% if i==1 %>
                            <a id="fb_<%=story.id%>" href="#" onclick= 'share_to_fb("<%= story.orig_url %>","<%= story.id%>");' class = "disabled"><i class="fa fa-2x fa-facebook-square"></i></a>
                        <%else%>
                            <a id="fb_<%=story.id%>" href="#" onclick= 'share_to_fb("<%= story.orig_url %>","<%= story.id%>");'><i class="fa fa-2x fa-facebook-square"></i></a> 
                        <%end%> 
                    </li>
                    <li>
                    <% i=0 %>
                        <%@us_story.each do |usr_str|%>
