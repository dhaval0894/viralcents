<%= form_for @recharge, url: {action: "addrecharge"}, html: {class: "form-horizontal"} do |f| %>
  <div class="form-group">
          <div class="col-sm-2 label-control">
            <%= f.label :Mobile %>
          </div>
          <div class="col-sm-10">
            <%= f.text_field :mobile, :placeholder => "Enter Mobile Number", :class => 'form-control' %>
          </div>
      </div>
<%= fields_for @recharge_stat do |fa| %>
      <div class="form-group">
          <div class="col-sm-2 label-control">
            <%= fa.label :Amount %>
          </div>
          <div class="col-sm-10">
            <%= fa.text_field :amount, :placeholder => "Enter Amount", :class => 'form-control' %>
          </div>
      </div>
<%end%>
      <div class="actions col-sm-offset-3 col-sm-9" style="margin-top:10px" >
              
        <%= f.submit 'Recharge', :class => "btn btn-default" %>

      </div>
<% end %>