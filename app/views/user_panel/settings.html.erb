<div class="col-md-offset-2 col-md-8">
	<div class="panel panel-theme">
		<div class="panel-heading">
			<p class="text-center panel-title">
				<i class="fa fa-gear"></i> Account Settings
			</p>
		</div>
		<div class="panel-body">
			<div class="row">	
				<h4>Social Network</h4>
				<hr>
				<div class="form-group">
					<div class="col-md-2"><label for="" class="label-control">Connected Via:</label></div>
					<div class="col-md-8">
						<% if twitter_user %>
		                	<a class="btn btn-block btn-social-icon btn-twitter">
		                    	<span class="fa fa-twitter"></span> Connected
		                	</a>
		            	<% else %>    
		                	<a class="btn btn-block btn-social-icon btn-twitter" id="sign_in" href="/auth/twitter">
		                    	<span class="fa fa-twitter"></span> Connect with Twitter
		                	</a>
		                	<a class="btn btn-block btn-social-icon btn-facebook">
		                	    <span class="fa fa-facebook"></span> Connect with Facebook
		                	</a>
		            	<% end %>
	            	</div>
				</div>
			</div>	
			<div class="row">
				<hr>
				<h4>Get Notifications Via</h4>
				<hr>
				<div class="form-group">
					<div class="col-md-2"><label for="" class="label-control">Email:</label></div>
					<div class="col-md-8"><input type="email" placeholder="Enter Email" class="form-control"></div>
				</div>
					
				<div class="col-md-6">
					<hr>
				</div>
				<div class="col-md-1">
					OR
				</div>
				<div class="col-md-5">
					<hr>
				</div>
				<div class="form-group">
					<div class="col-md-2"><label for="" class="label-control">SMS:</label></div>
					<div class="col-md-8"><input type="text" placeholder="Enter Mobile Number" class="form-control"></div>
				</div>
			</div>
		</div>
	</div>
</div>	