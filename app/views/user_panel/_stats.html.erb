<!-- Partial for statistics in dashboard -->

<!-- row -->
<div class="row stats">

    <!-- Shared Stories -->
    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
        <div class="panel panel-green">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-12 stats-num">
                        <div class="huge"><%=@shared_story%></div>
                        <i class="fa fa-newspaper-o fa-3x"></i>
                    </div>
                    <div class="col-xs-12 stats-name">
                        <div class="medium">Shared Story</div>
                    </div>
                </div>
            </div>               
        </div>
    </div>

    <!-- Wallet Balance -->
    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
        <div class="panel panel-green">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-12 stats-num">
                        <div class="huge"><%=@wallet_amt%></div>
                        <i class="fa fa-rupee fa-3x"></i>
                    </div>
                    <div class="col-xs-12 stats-name">
                        <div class="medium">Balance</div>
                    </div>
                </div>
            </div>               
        </div>
    </div>

    <!-- Earning This Week -->
    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
        <div class="panel panel-green">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-12 stats-num">
                        <div class="huge"><%=@week_earning%></div>
                            <i class="fa fa-rupee fa-3x"></i>
                        </div>
                    <div class="col-xs-12 stats-name">
                        <div class="medium">Earning This Week</div>
                    </div>
                </div>
            </div>               
        </div>
    </div>

    <!-- Withdrawl -->
    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
        <div class="panel panel-green">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-12 stats-num">
                        <div class="huge"><%= @last_withdraw.amt%></div>
                        <i class="fa fa-rupee fa-3x"></i>
                    </div>
                    <div class="col-xs-12 stats-name">
                        <div class="medium">Last Withdrawl</div>
                    </div>
                </div>
            </div>               
        </div>
    </div>

</div>
<!-- /.row -->
<hr>