
<form class="form-inline" role="form">

    <!-- form group [search] -->
    <div class="form-group row col-md-offset-5" style="padding-right:20px;">
        <label class="label-control col-xs-3" style="margin-right:0; width:80px; text-align: center; height: 30px; font-size: 17px;" for="pref-search">Search:</label>
        <input type="text" class="form-control input-sm search col-xs-7" id="pref-search" placeholder="Enter Keyword" style="margin-right:0; width:140px;">
    </div>
</form>
<script>
	// Search and Filter for story using list.js
	function search_panel(){
	  var options = {
	    valueNames: ['title','category','date']
	  };

	  var storyList = new List('stories', options);

	  $('#filter-category').change(function () {
	      var selection = this.value;
	      if (selection) {
	          storyList.filter(function(item) {
	              return (item.values().category == selection);
	          });
	      } else {
	          storyList.filter();
	      }
	  });
}
</script>